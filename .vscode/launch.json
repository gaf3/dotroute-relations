{
    "version": "0.2.0",
    "configurations": [

        {
            "name": "api",
            "type": "python",
            "request": "attach",
            "port": 16850,
            "host": "localhost",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/api",
                    "remoteRoot": "/opt/service"
                }
            ]
        },
        {
            "name": "gui",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:6882/",
            "webRoot": "${workspaceFolder}/gui/www"
        }
    ]
}
